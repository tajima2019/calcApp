CalculateWidget:

<CalculateWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: label1
            text_size: self.size
            font_size: 40
            text: root.text
            halign: 'right'
        BoxLayout:
            Button:
                id: clear
                text: "AC"
                font_size: 30
                size_hint: (0.75, 1)
                on_press: root.clear_all()
                background_color: (2, 0, 0, 0.9)
            Button:
                id: divide
                text: "÷"
                font_size: 30
                size_hint: (0.25, 1)
                on_press: root.call_method(4)
        BoxLayout:
            Button:
                id: number7
                text: "7"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number8
                text: "8"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number9
                text: "9"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: times
                text: "x"
                font_size: 30
                on_press: root.call_method(3)
        BoxLayout:
            Button:
                id: number4
                text: "4"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number5
                text: "5"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number6
                text: "6"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: minus
                text: "-"
                font_size: 30
                on_press: root.call_method(2)
        BoxLayout:
            Button:
                id: number1
                text: "1"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number2
                text: "2"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: number3
                text: "3"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: plus
                text: "+"
                font_size: 30
                on_press: root.call_method(1)
        BoxLayout:
            Button:
                id: number0
                text: "0"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: point
                text: "."
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: pi
                text: "π"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: equal
                text: "="
                font_size: 30
                on_press: root.call_method(5)
                background_color: (1.9, 0.5, 0, 1)

        BoxLayout:
            Button:
                id: elect
                text: "e"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: mu
                text: "μ0"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: gravCon
                text: "G"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: gravAcc
                text: "g"
                font_size: 30
                on_press: root.press_number(self)
        BoxLayout:
            Button:
                id: avogadro
                text: "NA"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: atomos
                text: "P0"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: boltzmann
                text: "k"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: paToatm
                text: "Pa -> atm"
                font_size: 30
                on_press: root.press_number(self)
        BoxLayout:
            Button:
                id: planckCon
                text: "h"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: light
                text: "c"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: rydbergCon
                text: "R∞"
                font_size: 30
                on_press: root.press_number(self)
            Button:
                id: gasC
                text: "R"
                font_size: 30
                on_press: root.press_number(self)
        BoxLayout:
            Label:
                text: "有効数字"
            Switch:
                active: False
                id: sign
                on_active: root.switch_click(self, self.active)
